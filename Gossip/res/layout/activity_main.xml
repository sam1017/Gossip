<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.android.gossip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.gossip.MainActivity" >

    <com.android.gossip.GossipView
        android:id="@+id/myview"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        />

    <TextView 
        android:id="@+id/uptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myview"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:text="乾"
        android:textSize="48sp"
        android:textAlignment="center"
        />
    
    <com.android.gossip.DisplayView 
        android:id="@+id/upview"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_below="@id/myview"
        android:layout_toRightOf="@id/uptext"
        android:layout_alignTop="@id/uptext"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        />
    
    <TextView 
        android:id="@+id/downtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uptext"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="100dp"
        android:text="坤"
        android:textSize="48sp"
        android:textAlignment="center"
        />
    
    <com.android.gossip.DisplayView 
        android:id="@+id/downview"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_below="@id/upview"
        android:layout_toRightOf="@id/downtext"
        android:layout_alignTop="@id/downtext"
        android:layout_marginLeft="20dp"
        />
    
    <Button
        android:id="@+id/startbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start" 
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />
    
    <Button
        android:id="@+id/stopbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop" 
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
